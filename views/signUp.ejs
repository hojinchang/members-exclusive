<!DOCTYPE html>
<html>
  <head>
    <title><%= title || "Default Title" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body id="form-page">
    <main class="site-main">
        <div class="logo-container">
            <p><a href="/">members<em>Exclusive</em></a></p>
        </div>
        <h1 class="page-header"><%= title %></h1>
        <hr class="header-break">

        <section class="form-section">
            <div class="form-errors-container">
                <% if (errors && errors.length) { %>
                    <ul class="form-errors">
                        <% errors.forEach(error => { %>
                            <li><p class="error"><%- error.msg %></p></li>
                        <% }); %>
                    </ul>
                <% } %>
            </div>

            <form method="POST">
                <div class="form-input-container">
                    <label for="firstName">First Name (*)</label>
                    <input 
                        type="text" 
                        id="firstName" 
                        name="firstName" 
                        minlength="1" 
                        maxlength="20"
                        value="<%= firstName ? firstName : '' %>"
                        required
                    >
                </div>
                <div class="form-input-container">
                    <label for="lastName">Last Name (*)</label>
                    <input 
                        type="text" 
                        id="lastName" 
                        name="lastName" 
                        minlength="1" 
                        maxlength="20" 
                        value="<%= lastName ? lastName : '' %>"
                        required
                    >
                </div>
                <div class="form-input-container">
                    <label for="username">Username (*)</label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username"
                        minlength="1" 
                        maxlength="20" 
                        value="<%= username ? username : '' %>"
                        required
                    >
                </div>
                <div class="form-input-container">
                    <label for="password">Password (*)</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        minlength="1" 
                        required
                    >
                </div>
                <div class="form-input-container">
                    <label for="passwordConfirm">Confirm Password (*)</label>
                    <input 
                        type="password" 
                        id="passwordConfirm" 
                        name="passwordConfirm" 
                        minlength="1" 
                        required
                    >
                </div>
                <div class="form-button-container">
                    <p><a href="/posts">Cancel</a></p>
                    <button type="submit">Submit</button>
                </div>
            </form>
            <hr class="secondary-break">
            <p class="secondary-choice">Already have an account.<a href="/user/login"> Log in.</a></p>

        </section>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
