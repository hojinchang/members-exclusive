<%- include("partials/head") %>
  <body id="signUpPage">
    <main class="site-main">
        <h1 class="page-header"><%= title %></h1>
        <hr class="header-break">

        <section class="form-section">
            <form method="POST">
                <div class="form-input-container">
                    <label for="firstName">First Name (*)</label>
                    <input type="text" id="firstName" name="firstName" minlength="1" maxlength="20" required>
                </div>
                <div class="form-input-container">
                    <label for="lastName">Last Name (*)</label>
                    <input type="text" id="lastName" name="lastName" minlength="1" maxlength="20" required>
                </div>
                <div class="form-input-container">
                    <label for="username">Username (*)</label>
                    <input type="text" id="username" name="username" minlength="1" maxlength="20" required>
                </div>
                <div class="form-input-container">
                    <label for="password">Password (*)</label>
                    <input type="password" id="password" name="password" minlength="1" required>
                </div>
                <div class="form-input-container">
                    <label for="confirmPassword">Confirm Password (*)</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" minlength="1" required>
                </div>
                <div class="form-button-container">
                    <p><a href="/posts">Cancel</a></p>
                    <button type="submit">Submit</button>
                </div>
            </form>
            <hr class="secondary-break">
            <p class="secondary-choice">Already have an account.<a href="/user/log-in"> Log in.</a></p>

        </section>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
